{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "formatter": {
    "indentStyle": "space",
    "lineEnding": "lf",
    "indentWidth": 2
  },
  "css": {
    "parser": {
      "cssModules": true
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noExplicitAny": "off",
        "noTemplateCurlyInString": "off",
        "useAdjacentOverloadSignatures": "off",
        "noUnknownAtRules": "off"
      },
      "a11y": {
        "useSemanticElements": "off",
        "useAriaPropsSupportedByRole": "off"
      },
      "style": {
        "noNonNullAssertion": "off"
      },
      "complexity": {
        "useLiteralKeys": "off",
        "noBannedTypes": "off"
      }
    }
  }
}
